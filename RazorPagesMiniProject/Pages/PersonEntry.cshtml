@page
@model RazorPagesMiniProject.Pages.PersonEntryModel
@{
    ViewData["Title"] = "PersonEntry";
}

<form method="post">
    <div class="form-group">
        <label for="firstNameText">First Name:</label>
        <input type="text" class="form-control" id="firstNameText" asp-for=Person.FirstName placeholder="First Name" />
    </div>
    <div class="form-group">
        <label for="lastNameText">Last Name: </label>
        <input type="text" class="form-control" id="lastNameText" asp-for=Person.LastName placeholder="Last Name" />
    </div>
    <div class="form-group">
        <label for="isActiveCheck">Is Active:</label>
        <input type="checkbox" class="form-check" id="isActiveCheck" asp-for=Person.IsActive />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

