@page
@model RazorPagesMiniProject.Pages.AddressEntryModel
@{
    ViewData["Title"] = "AddressEntry";
}

<form method="post">
    <div class="form-group">
        <label for="streetText">Street Address:</label>
        <input type="text" class="form-control" id="streetText" asp-for=Address.StreetAddress placeholder="Street Address" />
    </div>
    <div class="form-group">
        <label for="cityText">City: </label>
        <input type="text" class="form-control" id="cityText" asp-for=Address.City placeholder="City" />
    </div>
    <div class="form-group">
        <label for="stateText">State: </label>
        <input type="text" class="form-control" id="stateText" asp-for=Address.State placeholder="State" />
    </div>
    <div class="form-group">
        <label for="zipText">ZIP Code: </label>
        <input type="text" class="form-control" id="zipText" asp-for=Address.ZipCode placeholder="ZIP Code" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
